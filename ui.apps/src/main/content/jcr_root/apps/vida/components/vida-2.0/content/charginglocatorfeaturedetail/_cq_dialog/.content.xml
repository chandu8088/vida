<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Charging Locator Feature Detail V2.0"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[vida.authoring.dialog]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <chargingfeatureDetail
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Charging Locator Feature Details"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <sectionId
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Section ID"
                                                name="./sectionId"/>
                                            <preTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="This field is used to provide the pre title of the component."
                                                fieldLabel="Pre Title"
                                                name="./preTitle"/>
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="This field is used to provide the title of the component."
                                                fieldLabel="Title"
                                                name="./title"/>
                                            <titleTag
                                                granite:class="cq-dialog-dropdown-showhide-multival"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Please Select the heading tag for title"
                                                emptyText="Select heading tag"
                                                fieldLabel="Title Tag"
                                                name="./titleTag">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Select Tag"
                                                        value=""/>
                                                    <h1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H1"
                                                        value="h1"/>
                                                    <h2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H2"
                                                        value="h2"/>
                                                    <h3
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H3"
                                                        value="h3"/>
                                                    <h4
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H4"
                                                        value="h4"/>
                                                    <h5
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H5"
                                                        value="h5"/>
                                                    <h6
                                                        jcr:primaryType="nt:unstructured"
                                                        text="H6"
                                                        value="h6"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".item-type-hide-show"/>
                                            </titleTag>
                                            <description
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="This field is used to provide the description."
                                                fieldLabel="Description"
                                                name="./description"
                                                useFixedInlineToolbar="{Boolean}true">
                                                <rtePlugins
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="/apps/vida/components/richtext/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text/rtePlugins" />
                                                <uiSettings
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceSuperType="/apps/vida/components/richtext/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text/uiSettings" />
                                                <htmlRules jcr:primaryType="nt:unstructured">
                                                    <blockHandling
                                                        jcr:primaryType="nt:unstructured"
                                                        removeSingleParagraphContainer="{Boolean}true" />
                                                </htmlRules>
                                            </description>
                                            <dataPosition
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="This field specifies the value of linkPosition in the data layer."
                                                fieldLabel="Position"
                                                name="./dataPosition"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </chargingfeatureDetail>
                    <cards
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Card Details"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">											
                                            <cardsInfo
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                validation="multifield-item-number">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./cardsInfo">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <order
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Order"
                                                            name="./order"/>
                                                        <sectionId
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Section ID"
                                                            name="./sectionId"/>
                                                        <label
                                                            jcr:primaryType="nt:unstructured"
                                                            fieldDescription="Enter Label for card"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Label"
                                                            name="./label"/>
                                                        <labelTag
                                                            granite:class="cq-dialog-dropdown-showhide-multival"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            emptyText="select heading tag for label"
                                                            fieldDescription="Please Select the heading tag for card label"
                                                            fieldLabel="Label Tag"
                                                            name="./labelTag">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <default
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Select Tag"
                                                                    value=""/>
                                                                <h1
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="H1"
                                                                    value="h1"/>
                                                                <h2
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="H2"
                                                                    value="h2"/>
                                                                <h3
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="H3"
                                                                    value="h3"/>
                                                                <h4
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="H4"
                                                                    value="h4"/>
                                                                <h5
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="H5"
                                                                    value="h5"/>
                                                                <h6
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="H6"
                                                                    value="h6"/>
                                                            </items>
                                                            <granite:data
                                                                jcr:primaryType="nt:unstructured"
                                                                cq-dialog-dropdown-showhide-target=".item-type-hide-show"/>
                                                        </labelTag>
                                                        <description
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                            fieldDescription="This field is used to provide the description of the card"
                                                            fieldLabel="Description"
                                                            name="./description"
                                                            useFixedInlineToolbar="{Boolean}true">
                                                            <rtePlugins
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="/apps/vida/components/richtext/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text/rtePlugins" />
                                                            <uiSettings
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceSuperType="/apps/vida/components/richtext/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text/uiSettings" />
                                                            <htmlRules jcr:primaryType="nt:unstructured">
                                                                <blockHandling
                                                                    jcr:primaryType="nt:unstructured"
                                                                    removeSingleParagraphContainer="{Boolean}true" />
                                                            </htmlRules>
                                                        </description>
                                                        <link
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldLabel="Link"
                                                            name="./link"
                                                            rootPath="/content"/>
                                                        <desktopImage
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldLabel="Desktop Image"
                                                            name="./desktopImage"
                                                            rootPath="/content/dam"/>
                                                        <mobileImage
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldLabel="Mobile Image"
                                                            name="./mobileImage"
                                                            rootPath="/content/dam"/>
                                                        <imageAlt
                                                            jcr:primaryType="nt:unstructured"
                                                            fieldDescription="This field is used for providing alt text if image is not available"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Image Alt"
                                                            name="./imageAlt"/>
                                                        <imageTitle
                                                            jcr:primaryType="nt:unstructured"
                                                            fieldDescription="This field is used for providing title text for image"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Image Title"
                                                            name="./imageTitle"/>
                                                    </items>
                                                </field>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    max-items="2" />
                                            </cardsInfo>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </cards>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
