<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Two Cards Component"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[vida.authoring.dialog]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <leftCard
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Left Cards"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <backgroundDesktop
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Background Image Desktop"
                                                name="./bgTextureImgDesk"
                                                rootPath="/content/dam" />
                                            <backgroundMobile
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Background Image Mobile"
                                                name="./bgTextureImgMob"
                                                rootPath="/content/dam" />
                                            <redirectImage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Redirect Image"
                                                name="./redirectImage"
                                                rootPath="/content/dam" />
                                            <secondImageUrl
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Second Image Path"
                                                name="./secondredirectImage"
                                                rootPath="/content/dam" />
                                            <redirectLink
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Redirect Link"
                                                name="./redirectLink"
                                                rootPath="/content" />
                                            <newtab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./newtab"
                                                text="Open link in new tab"
                                                uncheckedValue="{Boolean}false"
                                                value="{Boolean}true" />
                                            <cardText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Left Card Text"
                                                name="./leftcardText" />
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </leftCard>
                    <rightCard
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Right Cards"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <desklocationIcon
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Desktop Location Icon"
                                                name="./desklocationIcon"
                                                rootPath="/content/dam" />
                                            <moblocationIcon
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Mobile Location Icon"
                                                name="./moblocationIcon"
                                                rootPath="/content/dam" />
                                            <alttext
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Alt Text"
                                                name="./altTextLocation" />
                                            <redirectImage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Redirect Image"
                                                name="./rightredirectImage"
                                                rootPath="/content/dam" />
                                            <secondImageUrl
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Second Image Path"
                                                name="./rightsecondredirectImage"
                                                rootPath="/content/dam" />
                                            <alttextredirect
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Alt Text"
                                                name="./alttextredirect" />
                                            <redirectLink
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Redirect Link"
                                                name="./rightredirectLink"
                                                rootPath="/content" />
                                            <newtab
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./newtab"
                                                text="Open link in new tab"
                                                uncheckedValue="{Boolean}false"
                                                value="{Boolean}true" />
                                            <cardTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Card Title"
                                                name="./cardTitle" />
                                            <cardDescription
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Card Description"
                                                name="./cardDescription" />
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </rightCard>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
