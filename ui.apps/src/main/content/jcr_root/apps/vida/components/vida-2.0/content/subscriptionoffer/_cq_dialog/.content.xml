<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Subscription Offer Scroller V2.0"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <scrollingOffers
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldLabel="Scrolling Image">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./scrollingOffers">
                            <items jcr:primaryType="nt:unstructured">
                                <desktopscrollingImage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Please provide image path"
                                    fieldLabel="Desktop Scrolling Image"
                                    name="./desktopScrollingImage"
                                    rootPath="/content/dam"/>
                                <desktopscrollingImgTitle
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Please provide the title text for image"
                                    fieldLabel="Desktop Scrolling Image Title"
                                    name="./desktopScrollingImgTitle"/>
                                <desktopscrollingImageAlt
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Please provide alternative text to display if image is not available"
                                    fieldLabel="Alternative text for desktop scrolling image"
                                    name="./desktopScrollingImageAlt"/>
                                <mobilescrollingImage
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                    fieldDescription="Please provide image path"
                                    fieldLabel="Mobile Scrolling Image"
                                    name="./mobileScrollingImage"
                                    rootPath="/content/dam"/>
                                <mobilescrollingImgTitle
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Please provide the title text for image"
                                    fieldLabel="Mobile Scrolling Image Title"
                                    name="./mobileScrollingImgTitle"/>
                                <mobilescrollingImageAlt
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Please provide alternative text to display if image is not available"
                                    fieldLabel="Alternative text for mobile scrolling image"
                                    name="./mobileScrollingImageAlt"/>
                            </items>
                        </field>
                    </scrollingOffers>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
