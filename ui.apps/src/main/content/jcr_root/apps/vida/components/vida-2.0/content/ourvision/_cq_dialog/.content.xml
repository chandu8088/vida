<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Our Vision Component"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[vida.authoring.dialog]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        maximized="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <ourVisionInfo
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Our Vision Info"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <setItemDetails
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <granite:data jcr:primaryType="nt:unstructured"/>
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <ourVisionTitle
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Our Mission Title"
                                                                fieldLabel="Our Vision Title"
                                                                name="./ourVisionTitle"/>
                                                            <ourVisionDescription
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Our Mission Description"
                                                                fieldLabel="Our Vision Description"
                                                                name="./ourVisionDescription"/>
                                                            <ourMisionTitle
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Our Mission Title"
                                                                fieldLabel="Our Mission Title"
                                                                name="./ourMissionTitle"/>
                                                            <ourMissionDescription
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Our Mission Description"
                                                                fieldLabel="Our Mission Description"
                                                                name="./ourMissionDescription"/>
                                                            <backgroundimagepath
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                fieldLabel="Desktop Background Image path"
                                                                name="./backgroundDesktopImg"
                                                                rootPath="/content/dam"/>
                                                            <backgroundmobileimagepath
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                fieldLabel="Mobile Background Image path"
                                                                name="./backgroundMobileImg"
                                                                rootPath="/content/dam"/>
                                                            <imagealttext
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Image alt text"
                                                                name="./imagealttext"/>
                                                            <imageTitle
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Please provide the title text for image"
                                                                fieldLabel="Image Title"
                                                                name="./imageTitle"/>
                                                        </items>
                                                    </setItemDetails>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </ourVisionInfo>
                            <dataLayer
                                jcr:primaryType="nt:unstructured"
                                jcr:title="DataLayer"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <dataPosition
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="This field specifies the value of linkPosition in the data layer."
                                                        fieldLabel="Position"
                                                        name="./dataPosition"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </dataLayer>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
