                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Please enter section id"
                                        fieldLabel="Section ID (For Navigation Purpose Only)"
                                        name="./sectionid"/>
                                </items>
                            </column>
                        </items>
                    </fullbleed>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
