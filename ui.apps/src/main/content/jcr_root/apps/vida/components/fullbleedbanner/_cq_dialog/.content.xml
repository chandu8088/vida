                                                fieldLabel="Button Url"
                                                name="./btnurl"
                                                rootPath="/content/vida"/>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="large"/>
                                    </button>
