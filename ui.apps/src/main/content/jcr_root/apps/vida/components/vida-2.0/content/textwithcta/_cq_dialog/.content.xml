<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="About Us Text With CTA V2.0"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[vida.authoring.dialog]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        maximized="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <aboutVidaInfo
                                jcr:primaryType="nt:unstructured"
                                jcr:title="About Vida Info"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <setItemDetails
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <granite:data jcr:primaryType="nt:unstructured" />
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <textValue
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                                fieldDescription="Please add About Hero description"
                                                                fieldLabel="About Hero description"
                                                                name="./textValue"
                                                                useFixedInlineToolbar="{Boolean}true">
                                                                <rtePlugins
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceSuperType="/apps/vida/components/vida-2.0/structure/footer/cq:dialog/content/items/tabs/items/footerMain/items/columns/items/column/items/footerMainItem/items/footerAddress/rtePlugins" />
                                                                <uiSettings
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceSuperType="/apps/vida/components/vida-2.0/structure/footer/cq:dialog/content/items/tabs/items/footerMain/items/columns/items/column/items/footerMainItem/items/footerAddress/uiSettings" />

                                                                <htmlRules
                                                                    jcr:primaryType="nt:unstructured">
                                                                    <blockHandling
                                                                        jcr:primaryType="nt:unstructured"
                                                                        removeSingleParagraphContainer="{Boolean}true" />
                                                                </htmlRules>
                                                            </textValue>
                                                            <ctaLabel
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="CTA Label"
                                                                fieldLabel="CTA Label"
                                                                name="./ctaLabel" />
                                                            <ctaLink
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                fieldLabel="CTA Link"
                                                                name="./ctaLink"
                                                                rootPath="/content" />
                                                            <readMoreLabel
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Read More Label"
                                                                fieldLabel="Read More Label"
                                                                name="./readMoreLabel" />
                                                            <newtab
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                checked="{Boolean}false"
                                                                name="./newTab"
                                                                text="Open link in new tab"
                                                                uncheckedValue="{Boolean}false"
                                                                value="{Boolean}true" />
                                                        </items>
                                                    </setItemDetails>
                                                </items>
                                            </column>
                                        </items>    
                                    </columns>
                                </items>
                            </aboutVidaInfo>
                            <dataLayer
                                jcr:primaryType="nt:unstructured"
                                jcr:title="DataLayer"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <dataPosition
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="This field specifies the value of linkPosition in the data layer."
                                                        fieldLabel="Position"
                                                        name="./dataPosition"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </dataLayer>
                        </items>
                    </tabs>                   
                </items>
            </column>
        </items>
    </content>
</jcr:root>